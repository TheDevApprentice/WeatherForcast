<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile.Controls.ToastView"
             HorizontalOptions="Center"
             VerticalOptions="End"
             Margin="20,0,20,80"
             MaximumWidthRequest="400"
             IsVisible="False"
             Opacity="0">
    
    <Border x:Name="ToastBorder"
            Padding="16,12"
            StrokeShape="RoundRectangle 8"
            StrokeThickness="0"
            BackgroundColor="{DynamicResource ToastBackgroundColor}">
        <Border.Shadow>
            <Shadow Brush="{DynamicResource ShadowColor}" Opacity="0.2" Radius="16" Offset="0,4" />
        </Border.Shadow>
    
    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
        <!-- Icône -->
        <Label x:Name="IconLabel"
               Grid.Column="0"
               FontSize="20"
               VerticalOptions="Center"
               TextColor="{DynamicResource ToastTextColor}"/>
        
        <!-- Message -->
        <Label x:Name="MessageLabel"
               Grid.Column="1"
               FontSize="14"
               VerticalOptions="Center"
               TextColor="{DynamicResource ToastTextColor}"
               LineBreakMode="WordWrap"
               MaxLines="3"/>
        
        <!-- Bouton Fermer (optionnel) -->
        <Label x:Name="CloseButton"
               Grid.Column="2"
               Text="✕"
               FontSize="18"
               VerticalOptions="Center"
               TextColor="{DynamicResource ToastTextColor}"
               Opacity="0.7"
               IsVisible="False">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnCloseTapped"/>
            </Label.GestureRecognizers>
        </Label>
    </Grid>
    </Border>
</ContentView>
