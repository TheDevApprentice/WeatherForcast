<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:mobile.Controls"
             x:Class="mobile.Controls.SupportOverlay">
    
    <!-- Conteneur absolu pour les contrôles de support (chat popup + bouton) -->
    <!-- InputTransparent="True" permet au scroll de passer à travers -->
    <Grid RowDefinitions="*" ColumnDefinitions="*" 
          IsClippedToBounds="False"
          InputTransparent="False"
          >
        <!-- Chat Support popup -->
        <controls:SupportChatPopup Grid.Row="0"
                                   Grid.Column="0"
                                   />
        
        <!-- Bouton Support flottant -->
        <controls:SupportButton Grid.Row="0"
                                Grid.Column="0"
                                HorizontalOptions="End"
                                VerticalOptions="End"
                                Margin="0,0,20,20"
                                />
    </Grid>
    
</ContentView>
