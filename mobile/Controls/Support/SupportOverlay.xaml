<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:mobile.Controls"
             x:Class="mobile.Controls.SupportOverlay"
             HorizontalOptions="End"
             VerticalOptions="End"
             Padding="0,0,0,0"
             Margin="0,0,0,0">

    <!-- Petit conteneur local : ne pas étirer sur toute la page -->
    <Grid>

        <!-- Popup de support : s'affiche au-dessus du contenu de l'overlay -->
        <controls:SupportChatPopup />

        <!-- Bouton flottant en bas à droite de l'overlay -->
        <controls:SupportButton
            HorizontalOptions="End"
            VerticalOptions="End" />
    </Grid>

</ContentView>