<?xml version="1.0" encoding="utf-8" ?>
<AbsoluteLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="mobile.Controls.ToastContainer"
                x:Name="Container"
                InputTransparent="True"
                IsVisible="True"
                BackgroundColor="Transparent">
    
    <!-- Les toasts seront ajoutÃ©s dynamiquement ici -->
    <VerticalStackLayout x:Name="ToastStack"
                         Spacing="8"
                         Padding="16"
                         VerticalOptions="End"
                         HorizontalOptions="Center"
                         AbsoluteLayout.LayoutBounds="0.5, 1, AutoSize, AutoSize"
                         AbsoluteLayout.LayoutFlags="PositionProportional"
                         InputTransparent="False"/>
    
</AbsoluteLayout>
