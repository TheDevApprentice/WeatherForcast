<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile.Pages.Auth.LoginPage"
             xmlns:viewmodels="clr-namespace:mobile.PageModels.Auth"
             xmlns:models="clr-namespace:mobile.Models"
             x:DataType="viewmodels:LoginPageModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="1">
            <!-- ========== VUE: SÉLECTION DE PROFIL ========== -->
            <VerticalStackLayout x:Name="ProfileSelectionView" IsVisible="{Binding ShowProfileSelection}" Spacing="15">
                
                <!-- Liste des profils sauvegardés -->
                <CollectionView ItemsSource="{Binding SavedProfiles}" SelectionMode="None" Margin="0">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="7" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:SavedUserProfile">
                            <Border Padding="0" BackgroundColor="{DynamicResource CardBackgroundColor}" StrokeThickness="0" StrokeShape="RoundRectangle 12">
                                <Border.Shadow>
                                    <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2" />
                                </Border.Shadow>
                                
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnProfileCardTapped" />
                                </Border.GestureRecognizers>

                                <Grid Padding="5"  BackgroundColor="Transparent">
                                    <Grid ColumnDefinitions="80,*,Auto" ColumnSpacing="15" Padding="1">
                                    <!-- Avatar avec initiales -->
                                    <Border Grid.Column="0"
                                            HeightRequest="60"
                                            WidthRequest="60"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Center"
                                            StrokeThickness="0"
                                            StrokeShape="RoundRectangle 30">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding Email, Converter={StaticResource StringToColorConverter}}" />
                                        </Border.Background>
                                        <Label Text="{Binding Initials}" 
                                               FontSize="22" 
                                               FontAttributes="Bold"
                                               FontFamily="SegoeSemibold"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               HorizontalTextAlignment="Center"
                                               VerticalTextAlignment="Center"
                                               TextColor="White" />
                                    </Border>
                                    
                                    <!-- Infos utilisateur -->
                                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                                        <Label Text="{Binding FullName}" 
                                               FontSize="16" 
                                               FontAttributes="Bold"
                                               FontFamily="SegoeSemibold"
                                               TextColor="{DynamicResource PrimaryTextColor}" />
                                        <Label Text="{Binding Email}" 
                                               FontSize="13" 
                                               TextColor="{DynamicResource SecondaryTextColor}"
                                               FontFamily="SegoeSemibold" />
                                        <Label Text="{Binding LastLoginDescription}" 
                                               FontSize="11" 
                                               TextColor="{DynamicResource TertiaryTextColor}"
                                               FontFamily="SegoeSemibold" />
                                    </VerticalStackLayout>
                                    
                                    <!-- Bouton supprimer -->
                                    <ImageButton Grid.Column="2"
                                                VerticalOptions="Center"
                                                Padding="0"
                                                BackgroundColor="Transparent"
                                                Scale="0.5"
                                                Clicked="OnDeleteProfileClicked">
                                        <ImageButton.Source>
                                            <FontImageSource FontFamily="SegoeMDL2" 
                                                           Glyph="&#xECC9;" 
                                                           Color="{DynamicResource SecondaryTextColor}" />
                                        </ImageButton.Source>
                                    </ImageButton>
                                </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                
                <!-- Séparateur avec "ou" -->
                <Grid ColumnDefinitions="*,Auto,*" ColumnSpacing="10" Margin="0,10">
                    <BoxView Grid.Column="0" 
                             HeightRequest="1" 
                             Color="{DynamicResource BorderColor}"
                             VerticalOptions="Center" />
                    <Label Grid.Column="1" 
                           Text="ou" 
                           TextColor="{DynamicResource SecondaryTextColor}"
                           FontSize="14"
                           VerticalOptions="Center" />
                    <BoxView Grid.Column="2" 
                             HeightRequest="1" 
                             Color="{DynamicResource BorderColor}"
                             VerticalOptions="Center" />
                </Grid>
                
                <!-- Lien "Se connecter avec un autre compte" -->
                <Button Text="Se connecter avec un autre compte"
                        Command="{Binding UseAnotherAccountCommand}"
                        Clicked="OnUseAnotherAccountClicked"
                        Pressed="OnLinkPressed"
                        Released="OnLinkReleased"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        FontSize="14"
                        FontAttributes="Bold"
                        BorderWidth="0"
                        Padding="10,5"
                        HorizontalOptions="Center"
                        Margin="0,5" />
                        
            </VerticalStackLayout>

            <!-- ========== VUE: PROFIL SÉLECTIONNÉ (Mot de passe) ========== -->
            <VerticalStackLayout x:Name="SelectedProfileView" IsVisible="{Binding SelectedProfile, Converter={StaticResource IsNotNullConverter}}" Spacing="15">
                 <HorizontalStackLayout HorizontalOptions="Start">
                 
                <ImageButton 
                              BackgroundColor="Transparent"
                              HorizontalOptions="Start"
                              Scale="0.5"
                              Padding="0">
                              <ImageButton.Source>
                                  <FontImageSource FontFamily="SegoeMDL2" 
                                                  Glyph="&#xE760;"
                                                  Color="{DynamicResource Primary}" />
                              </ImageButton.Source>
                </ImageButton>
                <!-- Bouton retour -->
                <Button Text="Retour aux profils"
                        Command="{Binding BackToProfilesCommand}"
                        Clicked="OnBackToProfilesClicked"
                        Pressed="OnLinkPressed"
                        Released="OnLinkReleased"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        HorizontalOptions="Start"
                        Padding="0"
                        FontSize="14" />

                </HorizontalStackLayout>                
                <!-- Card du profil sélectionné -->
                <Border StrokeShape="RoundRectangle 12" Padding="20" BackgroundColor="{DynamicResource CardBackgroundColor}" StrokeThickness="0">
                    <Border.Shadow>
                        <Shadow Brush="{DynamicResource ShadowColor}" Opacity="0.1" Radius="8" Offset="0,2" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="15">
                        
                        <!-- Avatar et nom -->
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                            <Border WidthRequest="80" 
                                    HeightRequest="80"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 40"
                                    HorizontalOptions="Center">
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding SelectedProfile.Email, Converter={StaticResource StringToColorConverter}}" />
                                </Border.Background>
                                <Label Text="{Binding SelectedProfile.Initials}" 
                                       FontSize="32" 
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Border>
                            
                            <Label Text="{Binding SelectedProfile.FullName}" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"
                                   HorizontalOptions="Center" />
                            <Label Text="{Binding SelectedProfile.Email}" 
                                   FontSize="14" 
                                   TextColor="{DynamicResource SecondaryTextColor}"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                        
                        <!-- Mot de passe -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Mot de passe" FontAttributes="Bold" TextColor="{DynamicResource PrimaryTextColor}" />
                            <Entry Text="{Binding Password}"
                                   Placeholder="••••••••"
                                   IsPassword="True"
                                   ReturnType="Done" />
                        </VerticalStackLayout>
                        
                        <!-- Message d'erreur -->
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="{StaticResource Danger}"
                               IsVisible="{Binding HasError}"
                               FontSize="12" />
                        
                        <!-- Bouton de connexion -->
                        <Button Text="Se connecter"
                                Command="{Binding LoginCommand}"
                                IsEnabled="{Binding CanLogin}"
                                Opacity="{Binding CanLogin, Converter={StaticResource BoolToOpacityConverter}}"
                                Pressed="OnButtonPressed"
                                Released="OnButtonReleased"
                                HeightRequest="50"
                                CornerRadius="8"
                                FontAttributes="Bold"
                                TextColor="White"
                                Margin="0,10,0,0">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                                    <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                        
                        <!-- Indicateur de chargement -->
                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                         IsVisible="{Binding IsLoading}"
                                         Color="{StaticResource Primary}"
                                         HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>
                
            </VerticalStackLayout>

            <!-- ========== VUE: LOGIN CLASSIQUE ========== -->
            <VerticalStackLayout x:Name="ClassicLoginView" IsVisible="{Binding ShowClassicLogin}" Spacing="15">
            
            <!-- Formulaire de connexion -->
            <Border StrokeShape="RoundRectangle 12" Padding="20" BackgroundColor="{DynamicResource CardBackgroundColor}" StrokeThickness="0">
                <Border.Shadow>
                    <Shadow Brush="{DynamicResource ShadowColor}" Opacity="0.1" Radius="8" Offset="0,2" />
                </Border.Shadow>
                <VerticalStackLayout Spacing="15">
                    
                    <!-- Email -->
                    <Label Text="Email" FontAttributes="Bold" TextColor="{DynamicResource PrimaryTextColor}" />
                    <Entry x:Name="EmailEntry"
                           Text="{Binding Email}"
                           Placeholder="votre@email.com"
                           Keyboard="Email"
                           ReturnType="Next"
                           Completed="OnEmailCompleted" />

                    <!-- Password -->
                    <Label Text="Mot de passe" FontAttributes="Bold" TextColor="{DynamicResource PrimaryTextColor}" />
                    <Entry x:Name="PasswordEntryClassic"
                           Text="{Binding Password}"
                           Placeholder="••••••••"
                           IsPassword="True"
                           ReturnType="Done"
                           ReturnCommand="{Binding LoginCommand}" />

                    <!-- Message d'erreur -->
                    <Label Text="{Binding ErrorMessage}"
                           TextColor="{StaticResource Danger}"
                           IsVisible="{Binding HasError}"
                           FontSize="12" />

                    <!-- Bouton de connexion -->
                    <Button Text="Se connecter"
                            Command="{Binding LoginCommand}"
                            IsEnabled="{Binding CanLogin}"
                            Opacity="{Binding CanLogin, Converter={StaticResource BoolToOpacityConverter}}"
                            Pressed="OnButtonPressed"
                            Released="OnButtonReleased"
                            HeightRequest="50"
                            CornerRadius="8"
                            FontAttributes="Bold"
                            TextColor="White"
                            Margin="0,10,0,0">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                                <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <!-- Indicateur de chargement -->
                    <ActivityIndicator IsRunning="{Binding IsLoading}"
                                     IsVisible="{Binding IsLoading}"
                                     Color="{StaticResource Primary}"
                                     HorizontalOptions="Center" />

                </VerticalStackLayout>
            </Border>

            <!-- Lien vers inscription -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="Pas encore de compte ?" 
                       TextColor="{DynamicResource SecondaryTextColor}"
                       FontSize="14"
                       VerticalOptions="Center" />
                <Button Text="Créer un compte" 
                        Command="{Binding NavigateToRegisterCommand}"
                        Clicked="OnNavigateToRegisterClicked"
                        Pressed="OnLinkPressed"
                        Released="OnLinkReleased"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        FontAttributes="Bold"
                        FontSize="14"
                        BorderWidth="0"
                        Padding="0"
                        VerticalOptions="Center" />
            </HorizontalStackLayout>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
