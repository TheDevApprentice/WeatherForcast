<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile.Pages.Auth.RegisterPage"
             xmlns:viewmodels="clr-namespace:mobile.PageModels.Auth"
             x:DataType="viewmodels:RegisterPageModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource LightBackground}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header avec gradient violet -->
            <Frame CornerRadius="12" HasShadow="True" Padding="0" Margin="0,20,0,0">
                <Frame.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                        <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
                    </LinearGradientBrush>
                </Frame.Background>
                
                <VerticalStackLayout Padding="30" Spacing="10">
                    <Label Text="☁️" FontSize="48" HorizontalOptions="Center" />
                    <Label Text="WeatherForecast" 
                           FontSize="28" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="Créer votre compte" 
                           FontSize="14" 
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- Formulaire d'inscription -->
            <Frame CornerRadius="12" HasShadow="True" Padding="20" BackgroundColor="White">
                <FlexLayout Direction="Row" Wrap="Wrap" AlignItems="Start" JustifyContent="SpaceBetween">
                    
                    <!-- Prénom -->
                    <VerticalStackLayout Spacing="6" FlexLayout.Basis="48%" Margin="0,0,0,10">
                        <Label Text="Prénom" FontAttributes="Bold" TextColor="{StaticResource DarkOnLightBackground}" />
                        <Entry Text="{Binding FirstName}"
                               Placeholder="Jean"
                               ReturnType="Next" />
                    </VerticalStackLayout>

                    <!-- Nom -->
                    <VerticalStackLayout Spacing="6" FlexLayout.Basis="48%" Margin="0,0,0,10">
                        <Label Text="Nom" FontAttributes="Bold" TextColor="{StaticResource DarkOnLightBackground}" />
                        <Entry Text="{Binding LastName}"
                               Placeholder="Dupont"
                               ReturnType="Next" />
                    </VerticalStackLayout>

                    <!-- Email -->
                    <VerticalStackLayout Spacing="6" FlexLayout.Basis="100%" Margin="0,0,0,10">
                        <Label Text="Email" FontAttributes="Bold" TextColor="{StaticResource DarkOnLightBackground}" />
                        <Entry Text="{Binding Email}"
                               Placeholder="votre@email.com"
                               Keyboard="Email"
                               ReturnType="Next" />
                    </VerticalStackLayout>

                    <!-- Password -->
                    <VerticalStackLayout x:Name="PasswordGroup" Spacing="6" FlexLayout.Basis="48%" Margin="0,0,0,10">
                        <Label Text="Mot de passe" FontAttributes="Bold" TextColor="{StaticResource DarkOnLightBackground}" />
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry x:Name="PasswordEntry"
                                   Grid.Column="0"
                                   Text="{Binding Password}"
                                   Placeholder="••••••••"
                                   IsPassword="True"
                                   ReturnType="Next" />
                            <ImageButton x:Name="TogglePasswordButton"
                                         Grid.Column="1"
                                         BackgroundColor="Transparent"
                                         Padding="8"
                                         Clicked="OnTogglePasswordClicked">
                                <ImageButton.Source>
                                    <FontImageSource FontFamily="SegoeMDL2" Glyph="&#xE890;" Size="18" Color="{StaticResource Gray500}" />
                                </ImageButton.Source>
                            </ImageButton>
                        </Grid>
                    </VerticalStackLayout>

                    <!-- Confirm Password -->
                    <VerticalStackLayout x:Name="ConfirmPasswordGroup" Spacing="6" FlexLayout.Basis="48%" Margin="0,0,0,10">
                        <Label Text="Confirmer" FontAttributes="Bold" TextColor="{StaticResource DarkOnLightBackground}" />
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry x:Name="ConfirmPasswordEntry"
                                   Grid.Column="0"
                                   Text="{Binding ConfirmPassword}"
                                   Placeholder="••••••••"
                                   IsPassword="True"
                                   ReturnType="Done" />
                            <ImageButton x:Name="ToggleConfirmPasswordButton"
                                         Grid.Column="1"
                                         BackgroundColor="Transparent"
                                         Padding="8"
                                         Clicked="OnToggleConfirmPasswordClicked">
                                <ImageButton.Source>
                                    <FontImageSource FontFamily="SegoeMDL2" Glyph="&#xE890;" Size="18" Color="{StaticResource Gray500}" />
                                </ImageButton.Source>
                            </ImageButton>
                        </Grid>
                    </VerticalStackLayout>

                    <!-- Message d'erreur -->
                    <VerticalStackLayout Spacing="0" FlexLayout.Basis="100%">
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="{StaticResource Danger}"
                               IsVisible="{Binding HasError}"
                               FontSize="12" />
                    </VerticalStackLayout>

                    <!-- Bouton d'inscription -->
                    <Grid FlexLayout.Basis="100%" Margin="0,10,0,0">
                        <Button Text="Créer mon compte"
                                Command="{Binding RegisterCommand}"
                                IsEnabled="{Binding CanRegister}"
                                Opacity="{Binding CanRegister, Converter={StaticResource BoolToOpacityConverter}}"
                                HeightRequest="50"
                                CornerRadius="8"
                                FontAttributes="Bold"
                                TextColor="White">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                                    <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </Grid>

                    <!-- Indicateur de chargement -->
                    <Grid FlexLayout.Basis="100%">
                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                         IsVisible="{Binding IsLoading}"
                                         Color="{StaticResource Primary}"
                                         HorizontalOptions="Center" />
                    </Grid>

                </FlexLayout>
            </Frame>

            <!-- Lien vers connexion -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="Déjà un compte ?" 
                       TextColor="{StaticResource Gray500}"
                       FontSize="14"
                       VerticalOptions="Center" />
                <Button Text="Se connecter" 
                        Command="{Binding NavigateToLoginCommand}"
                        Clicked="OnNavigateToLoginClicked"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        FontAttributes="Bold"
                        FontSize="14"
                        BorderWidth="0"
                        Padding="0"
                        VerticalOptions="Center" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
