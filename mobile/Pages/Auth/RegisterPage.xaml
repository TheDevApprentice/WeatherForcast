<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile.Pages.Auth.RegisterPage"
             xmlns:viewmodels="clr-namespace:mobile.PageModels.Auth"
             x:DataType="viewmodels:RegisterPageModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource LightBackground}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header avec gradient violet -->
            <Frame CornerRadius="12" HasShadow="True" Padding="0" Margin="0,20,0,0">
                <Frame.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                        <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
                    </LinearGradientBrush>
                </Frame.Background>
                
                <VerticalStackLayout Padding="30" Spacing="10">
                    <Label Text="☁️" FontSize="48" HorizontalOptions="Center" />
                    <Label Text="WeatherForecast" 
                           FontSize="28" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="Créer votre compte" 
                           FontSize="14" 
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- Formulaire d'inscription -->
            <Frame CornerRadius="12" HasShadow="True" Padding="20" BackgroundColor="White">
                <VerticalStackLayout Spacing="15">
                    
                    <!-- Prénom -->
                    <Label Text="Prénom" FontAttributes="Bold" TextColor="{StaticResource DarkOnLightBackground}" />
                    <Entry Text="{Binding FirstName}"
                           Placeholder="Jean"
                           ReturnType="Next" />

                    <!-- Nom -->
                    <Label Text="Nom" FontAttributes="Bold" TextColor="{StaticResource DarkOnLightBackground}" />
                    <Entry Text="{Binding LastName}"
                           Placeholder="Dupont"
                           ReturnType="Next" />

                    <!-- Email -->
                    <Label Text="Email" FontAttributes="Bold" TextColor="{StaticResource DarkOnLightBackground}" />
                    <Entry Text="{Binding Email}"
                           Placeholder="votre@email.com"
                           Keyboard="Email"
                           ReturnType="Next" />

                    <!-- Password -->
                    <Label Text="Mot de passe" FontAttributes="Bold" TextColor="{StaticResource DarkOnLightBackground}" />
                    <Entry Text="{Binding Password}"
                           Placeholder="••••••••"
                           IsPassword="True"
                           ReturnType="Next" />

                    <!-- Confirm Password -->
                    <Label Text="Confirmer le mot de passe" FontAttributes="Bold" TextColor="{StaticResource DarkOnLightBackground}" />
                    <Entry Text="{Binding ConfirmPassword}"
                           Placeholder="••••••••"
                           IsPassword="True"
                           ReturnType="Done" />

                    <!-- Message d'erreur -->
                    <Label Text="{Binding ErrorMessage}"
                           TextColor="{StaticResource Danger}"
                           IsVisible="{Binding HasError}"
                           FontSize="12" />

                    <!-- Bouton d'inscription -->
                    <Button Text="Créer mon compte"
                            Command="{Binding RegisterCommand}"
                            IsEnabled="{Binding CanRegister}"
                            Opacity="{Binding CanRegister, Converter={StaticResource BoolToOpacityConverter}}"
                            HeightRequest="50"
                            CornerRadius="8"
                            FontAttributes="Bold"
                            TextColor="White"
                            Margin="0,10,0,0">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                                <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <!-- Indicateur de chargement -->
                    <ActivityIndicator IsRunning="{Binding IsLoading}"
                                     IsVisible="{Binding IsLoading}"
                                     Color="{StaticResource Primary}"
                                     HorizontalOptions="Center" />

                </VerticalStackLayout>
            </Frame>

            <!-- Lien vers connexion -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="Déjà un compte ?" 
                       TextColor="{StaticResource Gray500}"
                       VerticalOptions="Center" />
                <Button Text="Se connecter" 
                        Command="{Binding NavigateToLoginCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        FontAttributes="Bold"
                        BorderWidth="0"
                        Padding="0"
                        VerticalOptions="Center" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
