<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:mobile.Controls"
             x:Class="mobile.Pages.ParameterCenterPage"
             Title="Centre de paramètres"
             Background="Transparent">
    
    <!-- Overlay semi-transparent pour fermer au clic -->
    <Grid>
        <BoxView Color="Black" 
                 Opacity="0"
                 InputTransparent="True"
                 Background="Transparent">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBackgroundTapped"/>
            </BoxView.GestureRecognizers>
        </BoxView>
        
        <!-- Centre de paramètres positionné en haut à droite -->
        <controls:ParameterCenterView x:Name="ParameterCenter"
                                         HorizontalOptions="End"
                                         VerticalOptions="Fill"
                                         Margin="16,8,16,8"/>
    </Grid>
</ContentPage>
