<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile.Pages.ForecastsPage"
             xmlns:viewmodels="clr-namespace:mobile.PageModels"
             xmlns:models="clr-namespace:mobile.Models"
             x:DataType="viewmodels:ForecastsPageModel">
    
    <!-- TitleView vide pour masquer le titre mais garder le burger menu -->
    <Shell.TitleView>
