<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile.Pages.ForecastsPage"
             xmlns:viewmodels="clr-namespace:mobile.PageModels"
             xmlns:models="clr-namespace:mobile.Models"
             xmlns:controls="clr-namespace:mobile.Controls"
             x:DataType="viewmodels:ForecastsPageModel"
             Shell.NavBarIsVisible="False">
    
    <Grid RowDefinitions="Auto,*">
        <!-- Liste des prÃ©visions -->
        <RefreshView Grid.Row="1" 
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Forecasts}"
                            Margin="20,0,20,20">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="40" Spacing="10" VerticalOptions="Center">
                        <Label Text="ðŸŒ¤ï¸" 
                               FontSize="64" 
                               HorizontalOptions="Center"/>
                        <Label Text="Aucune prÃ©vision" 
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource Gray600}"/>
                        <Label Text="Les prÃ©visions mÃ©tÃ©o s'afficheront ici en temps rÃ©el" 
                               FontSize="14"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               TextColor="{StaticResource Gray500}"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:WeatherForecast">
                        <Border Margin="0,5" Padding="12">
                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="15">
                                <!-- Indicateur de tempÃ©rature (barre colorÃ©e) -->
                                <BoxView Grid.Column="0" Grid.RowSpan="3"
                                         WidthRequest="4"
                                         CornerRadius="2"
                                         Color="{Binding TemperatureColor}"/>
                                
                                <!-- Date -->
                                <Label Grid.Column="1" Grid.Row="0"
                                       Text="{Binding Date, StringFormat='{0:dddd dd MMMM yyyy}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                
                                <!-- TempÃ©rature -->
                                <HorizontalStackLayout Grid.Column="1" Grid.Row="1" Spacing="10">
                                    <Label Text="{Binding TemperatureC, StringFormat='{0}Â°C'}"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           TextColor="{Binding TemperatureColor}"/>
                                    <Label Text="{Binding TemperatureF, StringFormat='({0}Â°F)'}"
                                           FontSize="14"
                                           VerticalOptions="End"
                                       TextColor="{DynamicResource LightOnDarkBackground}"/>
                                </HorizontalStackLayout>
                                
                                <!-- RÃ©sumÃ© -->
                                <Label Grid.Column="1" Grid.Row="2"
                                       Text="{Binding Summary}"
                                       FontSize="14"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        
        <!-- Chat Support popup -->
        <controls:SupportChatPopup Grid.Row="0"
                                   Grid.RowSpan="2"/>
        
        <!-- Bouton Support flottant -->
        <controls:SupportButton Grid.Row="0"
                                Grid.RowSpan="2"
                                HorizontalOptions="End"
                                VerticalOptions="End"
                                Margin="0,0,20,20"/>
    </Grid>
</ContentPage>
