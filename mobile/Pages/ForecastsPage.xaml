        <Frame Grid.Row="0" Margin="20,20,20,10" Padding="20" CornerRadius="12" HasShadow="True">
            <Frame.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                    <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
                </LinearGradientBrush>
            </Frame.Background>
            
            <VerticalStackLayout VerticalOptions="Center">
                <Label Text="â˜ï¸ PrÃ©visions MÃ©tÃ©o" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="White"/>
                <Label Text="{Binding ForecastsCount, StringFormat='{0} prÃ©vision(s)'}" 
                       FontSize="14" 
                       TextColor="White"
                       Opacity="0.9"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Liste des prÃ©visions -->
        <RefreshView Grid.Row="1" 
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Forecasts}"
                            Margin="20,0,20,20">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="40" Spacing="20" VerticalOptions="Center">
                        <Label Text="ðŸŒ¤ï¸" 
