@model application.ViewModels.Admin.UserDetailsViewModel

@{
    ViewData["Title"] = $"D√©tails - {Model.Email}";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Utilisateurs</a></li>
            <li class="breadcrumb-item active">@Model.Email</li>
        </ol>
    </nav>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Informations G√©n√©rales et R√¥les (c√¥te √† c√¥te) -->
    <div class="row mb-4">
        <!-- Informations G√©n√©rales -->
        <div class="col-md-8">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">üìã Informations G√©n√©rales</h5>
                    <form asp-action="ToggleActive" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-@(Model.IsActive ? "warning" : "success")">
                            @(Model.IsActive ? "üî¥ D√©sactiver" : "üü¢ Activer")
                        </button>
                    </form>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Email:</strong> @Model.Email</p>
                            <p><strong>Nom complet:</strong> @Model.FullName</p>
                            <p><strong>Statut:</strong> 
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">üü¢ Actif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">üî¥ Inactif</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Cr√©√© le:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy √† HH:mm")</p>
                            <p><strong>Derni√®re connexion:</strong> 
                                @if (Model.LastLoginAt.HasValue)
                                {
                                    @Model.LastLoginAt.Value.ToString("dd/MM/yyyy √† HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">Jamais</span>
                                }
                            </p>
                            <p>
                                <strong>Sessions actives:</strong> <span id="sessions-count" class="badge bg-info">@Model.ActiveSessionsCount</span>
                                <strong class="ms-3">API Keys actives:</strong> <span id="apikeys-count" class="badge bg-info">@Model.ActiveApiKeysCount</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- R√¥les -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">üõ°Ô∏è R√¥les</h5>
                    <a asp-action="EditRoles" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                        <i class="bi bi-pencil"></i>
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Roles.Any())
                    {
                        @foreach (var role in Model.Roles)
                        {
                            <span class="badge bg-@GetRoleBadgeColor(role) me-2 mb-2 fs-6">@role</span>
                        }
                    }
                    else
                    {
                        <p class="text-muted mb-0">Aucun r√¥le assign√©</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Claims Personnalis√©s -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">üîë Claims Personnalis√©s</h5>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Valeur</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.Claims)
                            {
                                <tr>
                                    <td><code>@claim.Type</code></td>
                                    <td>@claim.Value</td>
                                    <td>
                                        <form asp-action="RemoveClaim" asp-route-id="@Model.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="claimType" value="@claim.Type" />
                                            <input type="hidden" name="claimValue" value="@claim.Value" />
                                            <button type="submit" class="btn btn-sm btn-danger" 
                                                    onclick="return confirm('Supprimer ce claim ?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">Aucun claim personnalis√©</p>
            }

            <!-- Formulaire Ajouter un Claim -->
            <hr />
            <h6>Ajouter un claim</h6>
            <form asp-action="AddClaim" asp-route-id="@Model.Id" method="post" class="row g-3">
                @Html.AntiForgeryToken()
                <div class="col-md-5">
                    <input type="text" name="claimType" class="form-control" placeholder="Type (ex: department)" required />
                </div>
                <div class="col-md-5">
                    <input type="text" name="claimValue" class="form-control" placeholder="Valeur (ex: IT)" required />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-plus"></i> Ajouter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- API Keys -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">üîê API Keys (@Model.ApiKeys.Count)</h5>
        </div>
        <div class="card-body">
            @if (Model.ApiKeys.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Key</th>
                                <th>Scopes</th>
                                <th>Statut</th>
                                <th>Derni√®re utilisation</th>
                                <th>Requ√™tes</th>
                            </tr>
                        </thead>
                        <tbody id="user-apikeys">
                            @foreach (var apiKey in Model.ApiKeys)
                            {
                                <tr>
                                    <td><strong>@apiKey.Name</strong></td>
                                    <td><code>@apiKey.Key</code></td>
                                    <td><small>@apiKey.Scopes</small></td>
                                    <td>
                                        @if (apiKey.IsRevoked)
                                        {
                                            <span class="badge bg-danger">üî¥ R√©voqu√©e</span>
                                        }
                                        else if (apiKey.IsExpired)
                                        {
                                            <span class="badge bg-warning">‚ö†Ô∏è Expir√©e</span>
                                        }
                                        else if (apiKey.IsActive)
                                        {
                                            <span class="badge bg-success">üü¢ Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        @if (apiKey.LastUsedAt.HasValue)
                                        {
                                            <small>@apiKey.LastUsedAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">Jamais</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@apiKey.RequestCount.ToString("N0")</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">Aucune API Key</p>
            }
        </div>
    </div>

    <!-- Sessions -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">üíª Sessions (@Model.Sessions.Count)</h5>
        </div>
        <div class="card-body">
            @if (Model.Sessions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>IP</th>
                                <th>User Agent</th>
                                <th>Statut</th>
                                <th>Expiration</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="user-sessions">
                            @foreach (var session in Model.Sessions.OrderByDescending(s => s.CreatedAt))
                            {
                                <tr>
                                    <td>
                                        @if (session.Type == "Web")
                                        {
                                            <span class="badge bg-primary">üåê Web</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">üì± Mobile</span>
                                        }
                                    </td>
                                    <td><small>@(session.IpAddress ?? "N/A")</small></td>
                                    <td><small>@(session.UserAgent ?? "N/A")</small></td>
                                    <td>
                                        @if (session.IsRevoked)
                                        {
                                            <span class="badge bg-danger">üî¥ R√©voqu√©e</span>
                                        }
                                        else if (session.IsExpired)
                                        {
                                            <span class="badge bg-warning">‚è∞ Expir√©e</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">üü¢ Active</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@session.ExpiresAt.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        @if (session.IsActive)
                                        {
                                            <form asp-action="RevokeSession" asp-route-sessionId="@session.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="userId" value="@Model.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger" 
                                                        onclick="return confirm('R√©voquer cette session ?')">
                                                    <i class="bi bi-x-circle"></i> R√©voquer
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">Aucune session</p>
            }
        </div>
    </div>

    <div class="mb-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour √† la liste
        </a>
    </div>
</div>

@functions {
    string GetRoleBadgeColor(string role)
    {
        return role switch
        {
            "Admin" => "danger",
            "User" => "primary",
            "MobileUser" => "info",
            "ApiConsumer" => "secondary",
            _ => "dark"
        };
    }
}

@section Scripts {
    <!-- SignalR -->
    <script nonce="@(Context?.Items["CspNonce"] as string)" src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@7.0.0/dist/browser/signalr.min.js"></script>
    
    <!-- Script temps r√©el admin -->
    <script nonce="@(Context?.Items["CspNonce"] as string)" type="module" src="~/js/admin-realtime.js" asp-append-version="true"></script>
    
    <script nonce="@(Context?.Items["CspNonce"] as string)">
        // Stocker l'userId pour les mises √† jour en temps r√©el
        window.currentUserId = '@Model.Id';
    </script>
}
