@model IEnumerable<application.ViewModels.Admin.UserListViewModel>

@{
    ViewData["Title"] = "Gestion des Utilisateurs";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üë• Gestion des Utilisateurs</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Cr√©er un utilisateur
        </a>
    </div>

    <!-- Barre de recherche et filtres -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Search" method="get" id="searchForm">
                <div class="row g-3 align-items-end">
                    <!-- Recherche textuelle -->
                    <div class="col-lg-3 col-md-6">
                        <label class="form-label fw-semibold">üîç Recherche</label>
                        <input type="text" name="searchTerm" id="searchTerm" class="form-control" 
                               placeholder="Nom, pr√©nom ou email..." />
                    </div>

                    <!-- Filtre par statut -->
                    <div class="col-lg-2 col-md-6">
                        <label class="form-label fw-semibold">Statut</label>
                        <select name="isActive" id="isActive" class="form-select">
                            <option value="">Tous</option>
                            <option value="true">üü¢ Actif</option>
                            <option value="false">üî¥ Inactif</option>
                        </select>
                    </div>

                    <!-- Filtre par r√¥le -->
                    <div class="col-lg-2 col-md-6">
                        <label class="form-label fw-semibold">R√¥le</label>
                        <select name="role" id="role" class="form-select">
                            <option value="">Tous</option>
                            <option value="User">User</option>
                            <option value="MobileUser">MobileUser</option>
                            <option value="ApiConsumer">ApiConsumer</option>
                        </select>
                    </div>

                    <!-- Tri -->
                    <div class="col-lg-3 col-md-6">
                        <label class="form-label fw-semibold">Trier par</label>
                        <select name="sortBy" id="sortBy" class="form-select">
                            <option value="CreatedAt">Date cr√©ation</option>
                            <option value="LastLoginAt">Derni√®re connexion</option>
                            <option value="Email">Email</option>
                            <option value="FirstName">Pr√©nom</option>
                        </select>
                    </div>

                    <!-- Indicateur de chargement -->
                    <div class="col-lg-2 col-md-12 text-center">
                        <div id="searchLoading" class="spinner-border text-primary d-none" role="status">
                            <span class="visually-hidden">Recherche...</span>
                        </div>
                    </div>
                </div>

                <!-- Filtres avanc√©s (collapsible) -->
                <div class="mt-3">
                    <a class="btn btn-sm btn-outline-secondary" data-bs-toggle="collapse" href="#advancedFilters">
                        <i class="bi bi-funnel"></i> Filtres avanc√©s
                    </a>
                </div>

                <div class="collapse mt-3" id="advancedFilters">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Cr√©√© apr√®s</label>
                            <input type="date" name="createdAfter" id="createdAfter" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Cr√©√© avant</label>
                            <input type="date" name="createdBefore" id="createdBefore" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Connect√© apr√®s</label>
                            <input type="date" name="lastLoginAfter" id="lastLoginAfter" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Connect√© avant</label>
                            <input type="date" name="lastLoginBefore" id="lastLoginBefore" class="form-control" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Nom</th>
                            <th>R√¥les</th>
                            <th>Statut</th>
                            <th>Cr√©√© le</th>
                            <th>Derni√®re connexion</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="userTableBody">
                        <!-- Skeleton loader pendant le chargement -->
                        <tr class="skeleton-row">
                            <td><div class="skeleton-text"></div></td>
                            <td><div class="skeleton-text"></div></td>
                            <td><div class="skeleton-badge"></div></td>
                            <td><div class="skeleton-badge"></div></td>
                            <td><div class="skeleton-text-small"></div></td>
                            <td><div class="skeleton-text-small"></div></td>
                            <td><div class="skeleton-buttons"></div></td>
                        </tr>
                        <tr class="skeleton-row">
                            <td><div class="skeleton-text"></div></td>
                            <td><div class="skeleton-text"></div></td>
                            <td><div class="skeleton-badge"></div></td>
                            <td><div class="skeleton-badge"></div></td>
                            <td><div class="skeleton-text-small"></div></td>
                            <td><div class="skeleton-text-small"></div></td>
                            <td><div class="skeleton-buttons"></div></td>
                        </tr>
                        <tr class="skeleton-row">
                            <td><div class="skeleton-text"></div></td>
                            <td><div class="skeleton-text"></div></td>
                            <td><div class="skeleton-badge"></div></td>
                            <td><div class="skeleton-badge"></div></td>
                            <td><div class="skeleton-text-small"></div></td>
                            <td><div class="skeleton-text-small"></div></td>
                            <td><div class="skeleton-buttons"></div></td>
                        </tr>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@user.Email</strong>
                                </td>
                                <td>@user.FullName</td>
                                <td>
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge bg-@GetRoleBadgeColor(role) me-1">@role</span>
                                    }
                                    @if (!user.Roles.Any())
                                    {
                                        <span class="text-muted">Aucun r√¥le</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">üü¢ Actif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">üî¥ Inactif</span>
                                    }
                                </td>
                                <td>
                                    <small>@user.CreatedAt.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    @if (user.LastLoginAt.HasValue)
                                    {
                                        <small>@user.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Jamais</small>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@user.Id" 
                                           class="btn btn-sm btn-info" title="Voir les d√©tails">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="EditRoles" asp-route-id="@user.Id" 
                                           class="btn btn-sm btn-warning" title="G√©rer les r√¥les">
                                            <i class="bi bi-shield-check"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <p class="text-muted">Aucun utilisateur trouv√©.</p>
                </div>
            }
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-between align-items-center">
        <p class="text-muted mb-0">
            <strong id="totalCount">Chargement...</strong>
        </p>
        <small class="text-muted">Scroll pour charger plus</small>
    </div>
</div>

@functions {
    string GetRoleBadgeColor(string role)
    {
        return role switch
        {
            "Admin" => "danger",
            "User" => "primary",
            "MobileUser" => "info",
            "ApiConsumer" => "secondary",
            _ => "dark"
        };
    }
}

@section Styles {
<style>
    /* Skeleton loader animations */
    @@keyframes skeleton-loading {
        0% { background-color: #e0e0e0; }
        50% { background-color: #f0f0f0; }
        100% { background-color: #e0e0e0; }
    }

    .skeleton-row {
        animation: skeleton-loading 1.5s infinite ease-in-out;
    }

    .skeleton-text {
        height: 16px;
        width: 80%;
        background-color: #e0e0e0;
        border-radius: 4px;
        animation: skeleton-loading 1.5s infinite ease-in-out;
    }

    .skeleton-text-small {
        height: 14px;
        width: 60%;
        background-color: #e0e0e0;
        border-radius: 4px;
        animation: skeleton-loading 1.5s infinite ease-in-out;
    }

    .skeleton-badge {
        height: 20px;
        width: 50px;
        background-color: #e0e0e0;
        border-radius: 12px;
        display: inline-block;
        animation: skeleton-loading 1.5s infinite ease-in-out;
    }

    .skeleton-buttons {
        height: 30px;
        width: 80px;
        background-color: #e0e0e0;
        border-radius: 4px;
        animation: skeleton-loading 1.5s infinite ease-in-out;
    }
</style>
}

@section Scripts {
<script>
    // Recherche dynamique avec pagination (scroll infini)
    let searchTimeout;
    const searchDelay = 500;
    let currentPage = 1;
    let isLoading = false;
    let hasMorePages = true;
    let allUsers = [];

    // Fonction de recherche
    async function performSearch(resetPage = true) {
        if (resetPage) {
            currentPage = 1;
            allUsers = [];
            hasMorePages = true;
        }

        if (isLoading || !hasMorePages) return;
        isLoading = true;

        const searchTerm = document.getElementById('searchTerm').value;
        const isActive = document.getElementById('isActive').value;
        const role = document.getElementById('role').value;
        const sortBy = document.getElementById('sortBy').value;
        const createdAfter = document.getElementById('createdAfter')?.value || '';
        const createdBefore = document.getElementById('createdBefore')?.value || '';
        const lastLoginAfter = document.getElementById('lastLoginAfter')?.value || '';
        const lastLoginBefore = document.getElementById('lastLoginBefore')?.value || '';

        const params = new URLSearchParams({
            searchTerm: searchTerm,
            isActive: isActive,
            role: role,
            sortBy: sortBy,
            createdAfter: createdAfter,
            createdBefore: createdBefore,
            lastLoginAfter: lastLoginAfter,
            lastLoginBefore: lastLoginBefore,
            pageNumber: currentPage,
            pageSize: 20
        });

        document.getElementById('searchLoading').classList.remove('d-none');

        try {
            const response = await fetch(`/Admin/Search?${params.toString()}`, {
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            });

            if (response.ok) {
                const data = await response.json();
                
                if (resetPage) {
                    allUsers = data.users;
                } else {
                    allUsers = allUsers.concat(data.users);
                }

                hasMorePages = data.hasNextPage;
                renderUsers();
                
                document.getElementById('totalCount').textContent = 
                    `${allUsers.length} / ${data.totalCount} utilisateur(s)`;
            }
        } catch (error) {
            console.error('Erreur lors de la recherche:', error);
        } finally {
            document.getElementById('searchLoading').classList.add('d-none');
            isLoading = false;
        }
    }

    // Fonction pour encoder le HTML et pr√©venir les attaques XSS
    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // Rendu des utilisateurs
    function renderUsers() {
        const tbody = document.getElementById('userTableBody');
        if (!tbody) return;

        // Supprimer les skeleton loaders
        const skeletonRows = tbody.querySelectorAll('.skeleton-row');
        skeletonRows.forEach(row => row.remove());

        tbody.innerHTML = allUsers.map(user => `
            <tr>
                <td><strong>${escapeHtml(user.email)}</strong></td>
                <td>${escapeHtml(user.firstName)} ${escapeHtml(user.lastName)}</td>
                <td>
                    ${user.roles.map(r => `<span class="badge bg-primary me-1">${escapeHtml(r)}</span>`).join('')}
                    ${user.roles.length === 0 ? '<span class="text-muted">Aucun r√¥le</span>' : ''}
                </td>
                <td>
                    ${user.isActive 
                        ? '<span class="badge bg-success">üü¢ Actif</span>' 
                        : '<span class="badge bg-secondary">üî¥ Inactif</span>'}
                </td>
                <td><small>${escapeHtml(new Date(user.createdAt).toLocaleDateString('fr-FR'))}</small></td>
                <td>
                    ${user.lastLoginAt 
                        ? `<small>${escapeHtml(new Date(user.lastLoginAt).toLocaleString('fr-FR'))}</small>`
                        : '<small class="text-muted">Jamais</small>'}
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="/Admin/Details/${escapeHtml(user.id)}" class="btn btn-sm btn-info" title="Voir les d√©tails">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="/Admin/EditRoles/${escapeHtml(user.id)}" class="btn btn-sm btn-warning" title="G√©rer les r√¥les">
                            <i class="bi bi-shield-check"></i>
                        </a>
                    </div>
                </td>
            </tr>
        `).join('');
    }

    // Scroll infini
    window.addEventListener('scroll', function() {
        if ((window.innerHeight + window.scrollY) >= document.body.offsetHeight - 500) {
            if (!isLoading && hasMorePages) {
                currentPage++;
                performSearch(false);
            }
        }
    });

    // √âv√©nements
    document.getElementById('searchTerm').addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => performSearch(true), searchDelay);
    });

    document.getElementById('isActive').addEventListener('change', () => performSearch(true));
    document.getElementById('role').addEventListener('change', () => performSearch(true));
    document.getElementById('sortBy').addEventListener('change', () => performSearch(true));

    const advancedFilters = ['createdAfter', 'createdBefore', 'lastLoginAfter', 'lastLoginBefore'];
    advancedFilters.forEach(filterId => {
        const element = document.getElementById(filterId);
        if (element) {
            element.addEventListener('change', () => performSearch(true));
        }
    });

    document.getElementById('searchForm').addEventListener('submit', function(e) {
        e.preventDefault();
        performSearch(true);
    });

    // Charger la premi√®re page au d√©marrage
    performSearch(true);
</script>
}

