@model application.ViewModels.Admin.CreateUserViewModel

@{
    ViewData["Title"] = "Cr√©er un utilisateur";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Utilisateurs</a></li>
            <li class="breadcrumb-item active">Cr√©er</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">‚ûï Cr√©er un nouvel utilisateur</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Informations de base -->
                <h5 class="mb-3">üìã Informations de base</h5>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email *</label>
                        <input asp-for="Email" class="form-control" placeholder="user@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label">Mot de passe *</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Minimum 6 caract√®res" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label">Pr√©nom *</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label">Nom *</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <hr />

                <!-- R√¥les -->
                <h5 class="mb-3">üõ°Ô∏è R√¥les</h5>
                <div class="mb-4">
                    <p class="text-muted">S√©lectionnez un ou plusieurs r√¥les pour cet utilisateur :</p>
                    @foreach (var role in Model.AvailableRoles)
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="SelectedRoles" 
                                   value="@role" id="role_@role" />
                            <label class="form-check-label" for="role_@role">
                                <span class="badge bg-@GetRoleBadgeColor(role)">@role</span>
                            </label>
                        </div>
                    }
                </div>

                <hr />

                <!-- Claim personnalis√© optionnel -->
                <h5 class="mb-3">üîë Claim personnalis√© (optionnel)</h5>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="CustomClaimType" class="form-label">Type</label>
                        <input asp-for="CustomClaimType" class="form-control" placeholder="Ex: department" />
                        <small class="form-text text-muted">Laissez vide si non n√©cessaire</small>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CustomClaimValue" class="form-label">Valeur</label>
                        <input asp-for="CustomClaimValue" class="form-control" placeholder="Ex: IT" />
                    </div>
                </div>

                <!-- Boutons -->
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Annuler
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Cr√©er l'utilisateur
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <!-- SignalR -->
    <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@7.0.0/dist/browser/signalr.min.js"></script>
    
    <!-- Script temps r√©el admin -->
    <script src="~/js/admin-realtime.js" asp-append-version="true"></script>
}

@functions {
    string GetRoleBadgeColor(string role)
    {
        return role switch
        {
            "Admin" => "danger",
            "User" => "primary",
            "MobileUser" => "info",
            "ApiConsumer" => "secondary",
            _ => "dark"
        };
    }
}
