<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WeatherForecast</title>
    <meta name="description" content="Application de gestion de prévisions météorologiques avec Clean Architecture" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    ☁️ WeatherForecast
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="WeatherForecast" asp-action="Index">
                                <i class="bi bi-cloud-sun"></i> 
                                <span class="d-md-none d-lg-inline">Météo</span>
                            </a>
                        </li>
                        
                        @if (User.Identity?.IsAuthenticated == true && User.HasClaim("permission", "user:manage"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-shield-check"></i> 
                                    <span class="d-md-none d-lg-inline">Admin</span>
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
    <div id="notifications" class="position-fixed top-0 end-0 p-3"></div>
    <div id="connection-status" class="position-fixed bottom-0 end-0 p-3">
        <span class="badge bg-secondary">
            <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
            Connexion...
        </span>
    </div>
    
    <main role="main" class="fade-in-up">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="footer text-muted">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">
                        &copy; 2025 <span class="text-gradient fw-bold">WeatherForecast</span> - Clean Architecture Demo
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Confidentialité</a>
                    <span class="mx-2">•</span>
                    <a href="https://github.com/TheDevApprentice/WeatherForecast" target="_blank" class="text-decoration-none">GitHub</a>
                </div>

            </div>
        </div>
    </footer>
    
    <script nonce="@(Context?.Items["CspNonce"] as string)" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script nonce="@(Context?.Items["CspNonce"] as string)" src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script nonce="@(Context?.Items["CspNonce"] as string)" src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- SignalR Client Library -->
    <script nonce="@(Context?.Items["CspNonce"] as string)" src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@7.0.14/dist/browser/signalr.min.js"></script>
    <script nonce="@(Context?.Items["CspNonce"] as string)" type="module" src="/js/hubs-bootstrap.js"></script>
</body>
</html>
