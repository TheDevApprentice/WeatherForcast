@model domain.Entities.WeatherForecast

@{
    ViewData["Title"] = "Supprimer la prévision";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger">
    <h3>Êtes-vous sûr de vouloir supprimer cette prévision ?</h3>
</div>

<div class="card">
    <div class="card-header">
        <h4>Prévision du @Model.Date.ToString("dd/MM/yyyy")</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dddd dd MMMM yyyy")</dd>

            <dt class="col-sm-3">Température (°C)</dt>
            <dd class="col-sm-9">@Model.TemperatureC °C</dd>

            <dt class="col-sm-3">Température (°F)</dt>
            <dd class="col-sm-9">@Model.TemperatureF °F</dd>

            <dt class="col-sm-3">Résumé</dt>
            <dd class="col-sm-9">@Model.Summary</dd>

            <dt class="col-sm-3">État</dt>
            <dd class="col-sm-9">
                @if (Model.IsHot())
                {
                    <span class="badge bg-danger">Chaud (&gt; 30°C)</span>
                }
                else if (Model.IsCold())
                {
                    <span class="badge bg-info">Froid (&lt; 0°C)</span>
                }
                else
                {
                    <span class="badge bg-success">Modéré</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
