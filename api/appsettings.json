{
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Database=${POSTGRES_DB};Username=${POSTGRES_USER};Password=${POSTGRES_PASSWORD}",
    "Redis": "host.docker.internal:6370,password=${REDIS_PASSWORD}"
  },
  "Jwt": {
    "Secret": "${JWT_SECRET}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "ExpirationHours": "${JWT_EXPIRATION_HOURS}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Email": {
    "Host": "${MAILING_HOST}",
    "Port": "${MAILING_PORT}",
    "EnableSsl": "${MAILING_ENABLE_SSL}",
    "UserName": "${MAILING_USERNAME}",
    "Password": "${MAILING_PASSWORD}",
    "From": "${MAILING_FROM}"
  }
}
