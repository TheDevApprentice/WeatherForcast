# ========================================
# CONFIGURATION DÉVELOPPEMENT
# ========================================
# Pour la production, utiliser des valeurs sécurisées

# Environnement (Development ou Production)
ASPNETCORE_ENVIRONMENT=Production

# Base de données
POSTGRES_DB=weatherforecastdb
POSTGRES_USER=weatheruser
POSTGRES_PASSWORD=weatherpass

REDIS_PASSWORD=redisSecurePass123!

# Data Protection - Certificat (vide en dev)
DATAPROTECTION_CERTIFICATE_THUMBPRINT=

# JWT (API)
JWT_SECRET=VotreCleSecreteSuperSecuriseeDeMinimum32Caracteres!
JWT_ISSUER=WeatherForecastApi
JWT_AUDIENCE=WeatherForecastClient
JWT_EXPIRATION_HOURS=24

# Mailling
MAILING_HOST=smtp.example.com
MAILING_PORT=587
MAILING_ENABLE_SSL=true
MAILING_USERNAME=smtp-user
MAILING_PASSWORD=smtp-password
MAILING_FROM=no-reply@yourdomain.com